@model IEnumerable<Login_System.Models.Group>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Groups.Index_Title</h2>
<h4>@TempData["ActionResult"]</h4>

<form asp-controller="Groups" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder=@Resources.Groups.Index_Search>
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value=@Resources.Groups.Index_BTN_Search />
                <a class="btn btn-primary" asp-action="Create">@Resources.Groups.Index_BTN_Create</a>
            </div>
        </div>
    </div>   
</form>
<hr />
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 border-right border-dark">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Resources.Groups.Index_Group
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                <a asp-action="Statistics" asp-route-id="@item.id">@Resources.Groups.Index_View</a> |
                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.id">@Resources.Resources.DELETE_Button</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <h4>@Resources.Groups.Index_SubTitle</h4>
            <p>
                @Resources.Groups.Index_SubDesc
            </p>
        </div>
    </div>
</div>


