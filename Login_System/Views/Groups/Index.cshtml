@model IEnumerable<Login_System.Models.Group>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@Resources.Resources.Layout_Groups</h1>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>        
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.Layout_Groups</li>
    </ol>
</nav>
<hr />
    <div class="card-columns" style="column-count: 2;">
        <div class="card">
            <div class="card-header">
                <h5>
                    @Resources.Groups.Index_Title
                    <a class="btn btn-primary float-right" asp-action="Create"><i class="fas fa-plus fa-fw"> </i> @Resources.Groups.Index_BTN_Create </a>
                </h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Resources.Groups.Index_Group
                            </th>

                            @if (User.IsInRole("Superadmin"))
                            {
                                <th>@Resources.Resources.Company</th>
                            }
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                @if (User.IsInRole("Superadmin"))
                                {
                                    <td>
                                        @item.company
                                    </td>
                                }
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="Statistics" asp-route-id="@item.id"><i class="fas fa-eye fa-fw"> </i> @Resources.Groups.Index_View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
        <div class="card-header"><h5>@Resources.Resources.Layout_info</h5></div>
            <div class="card-body">
                <p>
                    @Resources.Groups.Index_SubDesc
                </p>
            </div>
        </div>
    </div>
            @section Scripts {
                <script type="text/javascript">
                    function clearForm() {
                        var search = document.getElementById('search-bar');
                        search.value = '';
                        document.forms[0].submit();
                    }
                </script>
            }

