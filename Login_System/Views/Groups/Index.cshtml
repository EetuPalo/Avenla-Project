@model IEnumerable<Login_System.Models.Group>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Groups</h2>
<h4>@TempData["ActionResult"]</h4>

<form asp-controller="Groups" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder="Search for user groups...">
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value="Filter" />
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
    </div>   
</form>
<hr />
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 border-right border-dark">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Group
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                <a asp-action="Statistics" asp-route-id="@item.id">View</a> |
                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <h4>User Groups</h4>
            <p>
                Add, edit, and view groups from here. Be careful, as deleting a user group will also remove any skillgoals for the users belonging to said group.
            </p>
        </div>
    </div>
</div>


