@model Login_System.Models.Group

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="display:inline">@Resources.Groups.Index_Group</h2>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index"></a>Home</li>
        <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Index">@Resources.Resources.Layout_Groups</a></li>
        <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Statistics" asp-route-id=@ViewContext.RouteData.Values["id"].ToString()>@Model.name @Resources.Groups.Stats_Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.Employee_Index_Edit</li>
    </ol>
</nav>
<hr />
<div class="card">
    <div class="card-header"><h5>@Resources.Resources.Employee_Index_Edit</h5></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> @Resources.Resources.GENERAL_Back </button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-fw"> </i> @Resources.Groups.Edit_BTN_Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
