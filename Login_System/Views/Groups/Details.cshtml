@model Login_System.Models.Group

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Group Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
</div>
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm">
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.id"><i class="fas fa-edit fa-fw"> </i> Edit</a>
            <a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-left fa-fw"> </i> Back</a>
        </div>
    </div>
</div>
