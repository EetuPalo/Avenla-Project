@model List<Skills>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Skills.Index_Title</h2>

<form asp-controller="Skills" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder=@Resources.Skills.Index_Search value=@TempData["SearchValue"]>
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value=@Resources.Skills.Index_BTN_Search />
                <a class="btn btn-primary" asp-action="Create">@Resources.Skills.Index_BTN_Create</a>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-4 border-right border-dark">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Resources.Skills.Index_Skill
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model[i].Skill)
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model[i].Id">@Resources.Skills.Index_BTN_Edit</a> 
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model[i].Id">@Resources.Skills.Index_BTN_Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-8">
            <h4>@Resources.Skills.Index_SubTitle</h4>
            <p>
                @Resources.Skills.Index_SubDesc <a asp-action="Index" asp-controller="Groups">@Resources.Skills.Index_SubLink</a>
            </p>
        </div>
    </div>
</div>

