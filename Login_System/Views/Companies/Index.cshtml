@model IEnumerable<Login_System.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resources.Companies_index</h1>
<hr />
<div class="card">
    <div class="card-header">
        <h5>@Resources.Resources.List_Companies
            @if (User.IsInRole("Superadmin"))
            {
                <span class="float-right">
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                </span>
            }
        </h5>
    </div><div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (User.IsInRole("Superadmin")) 
                            {
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit fa-fw"> </i> Edit</a>
                            }
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info fa-fw"> </i> Info</a> 
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash fa-fw"> </i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>