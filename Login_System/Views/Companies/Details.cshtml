@model Login_System.Models.Company

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resources.Companies_index</h1>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Companies" asp-action="Index">@Resources.Resources.Companies_index</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>
<hr />
<div class="card">
    <div class="card-header"><h5>@Html.DisplayFor(model => model.Name)</h5> </div>
    <div class="card-body">
        @Html.Raw(Model.Description)

        @if (User.IsInRole("Superadmin"))
        {
            <div>
                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit fa-fw"> </i> @Resources.Resources.Employee_Index_Edit</a>
            </div>
        }
    </div>
</div>
