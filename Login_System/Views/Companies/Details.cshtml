@model Login_System.Models.Company

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@Resources.Resources.Companies_index</h1>
<hr />
<div class="card">
    <div class="card-header"><h5>@Html.DisplayFor(model => model.Name)</h5> </div>
    <div class="card-body">
        @Html.Raw(Model.Description)

        @if (User.IsInRole("Superadmin"))
        {
            <div>
                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit fa-fw"> </i> @Resources.Resources.Employee_Index_Edit</a>
            </div>
        }
    </div>
</div>
