@model Login_System.Models.UserCertificate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>UserCertificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="UserID" class="form-control" />
                <input hidden asp-for="UserName" class="form-control" />
                <input hidden asp-for="GrantDate" class="form-control" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.CertificateName, Model.CertificateList, "Select Certificate", new { @class = "form-control"})
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index" asp-route-id="@Model.UserID">Back</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
