@model Login_System.Models.UserCertificate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>

<h2>@Resources.Resources.UCertificates_Create_Title</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="UserID" class="form-control" />
                <input hidden asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.CertificateName, Model.CertificateList, @Resources.Resources.UCertificates_Create_DropDownDefault, new { @class = "form-control" })
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>@Resources.Resources.UCertificates_Create_DateTitle <input class="form-control" asp-for="GrantDate" type="text" id="datepicker" value="@DateTime.Now"></p>
                <span asp-validation-for="GrantDate" class="text-danger"></span>
            </div>
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-certificate fa-fw"> </i> @Resources.Resources.UCertificates_Create_Add</button>
                        <a class="btn btn-primary" asp-action="Index" asp-route-id="@Model.UserID"><i class="fas fa-arrow-left fa-fw"> </i> @Resources.Resources.GENERAL_Back</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
