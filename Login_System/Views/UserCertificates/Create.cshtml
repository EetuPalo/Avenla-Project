@model Login_System.Models.UserCertificate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<h2 style="display:inline">@Resources.Resources.UCertificates_Create_Title</h2>

@if (TempData["UserId"].ToString() == TempData["id"].ToString())
{
    <nav class="breadcrumb_nav" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="AppUsers" asp-action="Details">@Resources.Resources.Layout_Profile</a></li>
            <li class="breadcrumb-item"><a asp-controller="UserCertificates" asp-action="Index" asp-route-id=@ViewContext.RouteData.Values["id"].ToString()>@Resources.Resources.Layout_Usercertificates</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.UCertificates_Create_Title</li>
        </ol>
    </nav>
}
else
{
    <nav class="breadcrumb_nav" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="AppUsers" asp-action="Index">@Resources.Resources.Layout_Employees</a></li>
            <li class="breadcrumb-item"><a asp-controller="UserCertificates" asp-action="Index" asp-route-id=@TempData["UserID"]>@TempData["UserName"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.UCertificates_Create_Title</li>
        </ol>
    </nav>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="UserID" class="form-control" />
                <input hidden asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.CertificateName, Model.CertificateList, @Resources.Resources.UCertificates_Create_DropDownDefault, new { @class = "form-control" })
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>@Resources.Resources.UCertificates_Create_DateTitle <input class="form-control" asp-for="GrantDate" type="text" id="datepicker" value="@DateTime.Now"></p>
                <span asp-validation-for="GrantDate" class="text-danger"></span>
            </div>
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus-square fa-fw"> </i> @Resources.Resources.UCertificates_Create_Add</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
