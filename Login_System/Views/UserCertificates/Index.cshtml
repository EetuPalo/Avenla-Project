@model IEnumerable<Login_System.Models.UserCertificate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@TempData["UserName"] @Resources.Resources.UCertificates_Index_Title</h2>
<form asp-controller="UserCertificates" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder=@Resources.Resources.UCertificates_Index_Search>
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value=@Resources.Resources.Employee_Index_Filter />
                <a class="btn btn-primary" asp-action="Create" asp-route-id="@TempData["UserID"]">@Resources.Resources.UCertificates_Index_Add</a>
                @if  (TempData["Source"].ToString() == "shortcut")
                {
                    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">@Resources.Resources.GENERAL_Back</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="Index" asp-controller="AppUsers">@Resources.Resources.GENERAL_Back</a>
                }
            </div>
        </div>
    </div>
</form>
<hr />

<table class="table table-sm">
    <thead>
        <tr>
            <th>
                @Resources.Resources.UCertificates_Index_Cert
            </th>
            <th>
                @Resources.Resources.UCertificates_Index_GrantDate
            </th>
            <th>
                @Resources.Resources.UCertificates_Index_Granter
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertificateName)
            </td>
            <td>
                @item.GrantDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization)
            </td>
            <td>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">@Resources.Resources.DELETE_Button</a>
            </td>
        </tr>
}
    </tbody>
</table>
