@model List<AppRole>
@{
    ViewData["Title"] = "EditRoleOfUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="card-header">
        <h2>Edit Roles</h2>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].Name" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].Name
                </label>
            </div>
        }
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-sm">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                <a class="btn btn-danger" asp-action="Index" asp-controller="AppUsers">Back to List</a>
            </div>
        </div>
    </div>
</form>