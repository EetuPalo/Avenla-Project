@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Login_System.ViewModels
@model Login_System.Models.CreateRole
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Role</h1>
<fieldset>
    <form asp-action="CreateRole" asp-controller="Admin">
        <div asp-validation-summary="All" class="input-validation-error"></div>
        <p>
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" placeholder="Username" />
            <span asp-validation-for="RoleName"></span>
        </p>
      
        <p>
            <button type="submit">Create Role</button>
        </p>

    </form>
</fieldset>

<div>
    <a asp-action="ListRoles" asp-controller="Admin">Back to List</a>
</div>

