@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Login_System.ViewModels
@model Login_System.Models.CreateRole
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Admin.CreateRole_Title</h2>
<hr />
<fieldset>
    <form asp-action="CreateRole" asp-controller="Admin">
        <div asp-validation-summary="All" class="input-validation-error"></div>
        <div class="container-fluid p-0">
            <div class="row mb-4">
                <div class="col-sm-4">
                    <label class="form-check-label" asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" placeholder=@Resources.Admin.CreateRole_RoleName />
                    <span asp-validation-for="RoleName"></span>
                </div>
                <div class="col-sm-8"></div>
            </div>            
        </div>
      
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-sm">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-plus fa-fw"> </i> @Resources.Admin.CreateRole_BTN_Create</button>
                    <a class="btn btn-primary" asp-action="ListRoles" asp-controller="Admin"><i class="fas fa-arrow-left fa-fw"> </i> @Resources.Resources.GENERAL_Back</a>
                </div>
            </div>
        </div>

    </form>
</fieldset>

