@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Login_System.ViewModels
@model Login_System.Models.CreateRole
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Role</h2>
<hr />
<fieldset>
    <form asp-action="CreateRole" asp-controller="Admin">
        <div asp-validation-summary="All" class="input-validation-error"></div>
        <div class="container-fluid p-0">
            <div class="row mb-4">
                <div class="col-sm-4">
                    <label class="form-check-label" asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
                    <span asp-validation-for="RoleName"></span>
                </div>
                <div class="col-sm-8"></div>
            </div>            
        </div>
      
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-sm">
                    <button class="btn btn-primary" type="submit">Create Role</button>
                    <a class="btn btn-danger" asp-action="ListRoles" asp-controller="Admin">Back to List</a>
                </div>
            </div>
        </div>

    </form>
</fieldset>

