@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "ListRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListRoles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Admin" asp-action="CreateRole">
        Create Role
    </a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class=" btn btn-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                <a href="#" class=" btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles could be found
        </div>
        <div class="card-body">
            <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>


    </div>
}