@model Login_System.Models.GroupMember

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resources.Layout_groupmembers</h1>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Index">@Resources.Resources.Layout_Groups</a></li>
        <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Statistics" asp-route-id=@ViewContext.RouteData.Values["id"].ToString()>@TempData["GroupName"] @Resources.Groups.Stats_Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.Layout_groupmembers</</li>
    </ol>
</nav>
<hr />
    <div class="card-columns" style="column-count: 2;">
        <div class="card">
            <div class="card-header">
                <h5>
                    @Resources.Groups.Members_Index_SubTitle @TempData["GroupName"]
                    <a class="btn btn-info float-right" asp-action="Create" asp-route-id="@TempData["GroupID"]" asp-route-group="@TempData["GroupName"]" asp-route-source="edit"><i class="fas fa-edit fa-fw"> </i> @Resources.Groups.Members_Index_BTN_EditMembers</a>
                </h5>
            </div>
            <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Resources.Resources.FirstName
                                        </th>
                                        <th>
                                            @Resources.Resources.LastName
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Members)
                                    {
                                        <tr>
                                            <td>
                                                @item.FirstName
                                            </td>
                                            <td>
                                                @item.LastName
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                    </div>
                </div>

    </div>

