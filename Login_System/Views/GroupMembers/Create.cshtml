@model List<GroupUser>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Groups.Members_Create_Title @TempData["ActionPhase"]</h2>
<h4>@TempData["ActionResult"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-group container-fluid pl-4">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input hidden asp-for="@Model[i].GroupId" />
                <input hidden asp-for="@Model[i].GroupName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <button class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                        <button type="submit" class="btn btn-primary" asp-route-source="@TempData["Source"]" asp-route-groupId="@Model[0].GroupId"><i class="fas fa-check fa-fw"> </i> @Resources.Groups.Members_Create_BTN_Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
