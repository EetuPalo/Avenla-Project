@model IEnumerable<Login_System.ViewModels.SkillCourseMemberVM>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 border-right border-dark">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Username
                        </th>
                        <th>
                            Course
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            Completed
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DaysCompleted) / @Html.DisplayFor(modelItem => item.CourseLength)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-4">
            <h4>Your courses</h4>
            <p>
                This is a list of courses you have enrolled in or have completed in the past.
            </p>
        </div>
    </div>
</div>

<a class="btn btn-danger" asp-action="Index" asp-controller="AppUsers">Back</a>
