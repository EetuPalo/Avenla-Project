@model Login_System.ViewModels.CourseMemberVM
@{
    ViewData["Title"] = "Grade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grade</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6"> 
            <form asp-action="Grade">
                <div class="form-group">
                    <label asp-for="CourseGrade">Grade</label>
                    <select class="form-control" asp-for="CourseGrade">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option selected="selected" value="UNGRADED">Select Goal</option>
                    </select>
                    <span asp-validation-for="CourseGrade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Grade" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
        <div class="col-sm-6"></div>
    </div>
</div>