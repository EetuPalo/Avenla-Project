@model Login_System.Models.SkillCourseMember

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

@*<h2>Set Status</h2>
<hr />*@
<div class="card">
    <div class="card-header"><h5>Set Status</h5></div><div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserID" />
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="CourseID" />
                    <input type="hidden" asp-for="CourseName" />
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select class="form-control" asp-for="Status">
                            <option value="In-progress">In-progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Dropout">Dropout</option>
                            <option selected="selected" value="In-progress">Select Status</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p>Date: <input class="form-control" asp-for="CompletionDate" type="text" id="datepicker" value="@DateTime.Now"></p>
                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                    </div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm">
                                <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-fw"> </i> Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
