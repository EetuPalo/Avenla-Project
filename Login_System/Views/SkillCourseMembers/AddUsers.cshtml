@model List<SkillCourseMember>
@{
    ViewData["Title"] = "AddUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUsers</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUsers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-group container-fluid pl-4">
                    <input hidden asp-for="@Model[i].UserID" />
                    <input hidden asp-for="@Model[i].CourseID" />
                    <input hidden asp-for="@Model[i].UserName" />
                    <input hidden asp-for="@Model[i].Status" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <input asp-route-id="@Model[0].CourseID" type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>