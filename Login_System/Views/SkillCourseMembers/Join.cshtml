@model Login_System.Models.SkillCourseMember

@{
    ViewData["Title"] = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Join</h1>

<h3>Are you sure you want to join <span style="color: blue;">@Model.CourseName?</span></h3>

<h4 class="text-danger">@ViewBag.SCMError</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Join">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="CourseID" />
            <input type="hidden" asp-for="CourseName" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select class="form-control" asp-for="Status">
                    <option value="In-progress">In-progress</option>                    
                    <option value="Planning">Plan to attend</option>
                    <option selected="selected" value="In-progress">Select Status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="SkillCourses"><i class="fas fa-arrow-left fa-fw"> </i> Back to List</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-fw"> </i> Save</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
