@model Login_System.Models.SkillCourseMember

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>

<h1>Create</h1>

<h4>GroupMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                @Html.DropDownListFor(x => x.UserName, Model.Uname, "Select member", new { @class = "form-control", id = "name" })
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
	    <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select class="form-control" asp-for="Status">
                    <option value="In-progress">In-progress</option>                    
                    <option value="Planning">Plan to attend</option>
                    <option selected="selected" value="Planning">Select Status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserID" class="form-control" />
            </div>
	    <div class="form-group">
                <p>Date: <input class="form-control" asp-for="CompletionDate" type="text" id="datepicker" value="@DateTime.Now"></p>
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-sm">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus fa-fw"> </i> Create</button>
                        <a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-left fa-fw"> </i> Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
