@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        @if (!User.Identity.IsAuthenticated)
        {
            <h1 class="display-4">Welcome, Guest!</h1>
        }
        else if (User.Identity.IsAuthenticated)
        {
            <h1 class="display-4">Welcome, @User.Identity.Name!</h1>
        }
    </div>
