@model Login_System.ViewModels.SkillGoalIndexVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@TempData.Peek("GroupName"): Goals for @TempData.Peek("LatestDate")</h2>
<h4 class="text-info">@TempData["ActionResult"]</h4>
<h4 class="text-danger">@TempData["ActionWarning"]</h4>

<form id="dateForm" asp-controller="SkillGoals" asp-action="RefreshIndex">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                @Html.DropDownListFor(x => x.SelectedDate, new SelectList(Model.SkillDates, "Value", "Text"), "Select Date", new { @class = "form-control col-sm", @onchange = "reloadPage()" })
                <input hidden asp-for="@Model.GroupName" value="@TempData.Peek("GroupName")" />
            </div>
            <div class="col-sm">
                <a class="btn btn-primary" asp-action="Create" asp-route-name="@TempData.Peek("GroupName")">Create New</a>
                @if (Model.DateToDelete != null)
                {
                    <a class="btn btn-danger" asp-action="DeleteForm" asp-route-date="@Model.DateToDelete" asp-route-group="@TempData.Peek("GroupName")">Delete</a>
                }
                else
                {
                    Model.DateToDelete = TempData.Peek("LatestDate").ToString();
                    <a class="btn btn-danger" asp-action="DeleteForm" asp-route-date="@Model.DateToDelete" asp-route-group="@TempData.Peek("GroupName")">Delete</a>
                }
                <a class="btn btn-danger" asp-action="Statistics" asp-controller="Groups" asp-route-id="@TempData["GroupID"]">Back</a>
            </div>
        </div>
    </div>    
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Skill
            </th>
            <th>
                Goal
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Goals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillName)
                </td>
                <td>
                    @if (item.LatestGoal == -1)
                    {
                        <span class="text-danger">NO GOAL</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.LatestGoal)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function reloadPage() {
            document.getElementById("dateForm").submit();
        }
    </script>
}
