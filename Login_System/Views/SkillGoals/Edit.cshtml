@model Login_System.Models.SkillGoals

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.SkillGoals.MODEL_SkillGoal</h1>
<hr />
<div class="card">
    <div class="card-header"><h5>@Resources.SkillGoals.Edit_Goal @ViewBag.GroupName</h5></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="GroupName" />
                    <input type="hidden" asp-for="Date" />
                    <div class="form-group">
                        <label asp-for="SkillName" class="control-label"></label>
                        <input asp-for="SkillName" class="form-control" readonly />
                        <span asp-validation-for="SkillName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SkillGoal" class="control-label"></label>
                        <input asp-for="SkillGoal" class="form-control" />
                        <span asp-validation-for="SkillGoal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-fw"> </i> @Resources.SkillGoals.Edit_Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
