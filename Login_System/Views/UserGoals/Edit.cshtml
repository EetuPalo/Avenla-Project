@model Login_System.Models.UserGoals

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resources.UserGoals_Edit</h1>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="AppUsers" asp-action="Details">@Resources.Resources.Layout_Profile</a></li>
        <li class="breadcrumb-item"> <a asp-controller="UserGoals" asp-action="Index">@Resources.Resources.UserGoals_UserGoals</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.UserGoals_Edit</li>
    </ol>
</nav>
<hr />

<div class="card">
    <div class="card-header"><h5>@Resources.Resources.UserGoals_Edit</h5></div><div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="SkillName" class="control-label">@Resources.SkillGoals.MODEL_SkillName</label>
                        <label asp-for="SkillName" class="form-control">@Model.SkillName</label>
                        <span asp-validation-for="SkillName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SkillGoal" class="control-label">@Resources.SkillGoals.MODEL_SkillGoal</label>
                        <select asp-for="SkillGoal" name="skillGoal" class="max form-control" id="skillGoal">
                            <option value="">@Resources.SkillGoals.MODEL_SkillGoal</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <span asp-validation-for="SkillGoal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> @Resources.Resources.GENERAL_Back </button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-check fa-fw"> </i> @Resources.Resources.GENERAL_Edit </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
