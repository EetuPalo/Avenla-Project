@model Login_System.ViewModels.UserGoalsVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resources.UserGoals_Create</h1>
    <nav class="breadcrumb_nav" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="AppUsers" asp-action="Details">@Resources.Resources.Layout_Profile</a></li>
            <li class="breadcrumb-item"> <a asp-controller="UserGoals" asp-action="Index">@Resources.Resources.UserGoals_UserGoals</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.UserGoals_Create</li>
        </ol>
    </nav>
<hr />
    <div class="card">
        <div class="card-header"><h5>@Resources.Resources.UserGoals_Create</h5></div>
        <div class="card-body">
            <div class="container-fluid p-0">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="card-body">

                                        <div class="row">

                                            <div class="row col-sm-12" id="skillFilters">

                                                <div class="row col-sm-12" id="skillfilter">
                                                    <div class="col-sm-3" id="skill">

                                                        @Html.DropDownListFor(x => x.SkillId, new SelectList(Model.AvailableSkillList, "Value", "Text"), Resources.Skills.Index_Skill, new { @class = "skillName form-control col-sm" })
                                                        <br />
                                                    </div>
                                                    <br />
                                                    <div class="col-sm-3">
                                                        <select name="skillGoal" class="max form-control" id="skillGoal" >
                                                            <option value="">@Resources.SkillGoals.MODEL_SkillGoal</option>
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                            <option value="5">5</option>
                                                        </select>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                

                                <div class="form-group">
                                    <button type="button" class="btn btn-outline-primary" onclick="goBack()"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus fa-fw"> </i> @Resources.Courses.Create_BTN_Create </button>
                                </div>
                            

                        </div>
                     </div>
                </form>
            </div>
        </div>
    </div>

