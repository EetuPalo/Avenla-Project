@model Login_System.ViewModels.UserSkillsWithSkillVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.SkillCount = 0;
    var counter = 0;
}

<h1>Create</h1>

<h4>UserSkills</h4>
<hr />
<fieldset>
    <form asp-action="Create" asp-controller="UserSkills">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        @for (int i = 0; i < Model.SkillList.Count(); i++)
        {
            counter++;
            <p>
                <label class="mb-1">@Model.SkillList[i]</label>
                <select class="form-control" asp-for="@Model.SkillLevel[i]">
                    <option value="0">0 - No interest</option>
                    <option value="1">1 - Apprentice</option>
                    <option value="2">2 - Journeyman</option>
                    <option value="3">3 - Expert</option>
                    <option value="4">4 - Artisan</option>
                    <option value="5">5 - Master</option>
                </select>
                <input hidden asp-for="@Model.SkillList[i]" />
                <span asp-validation-for="@Model.SkillLevel[i]"></span>
            </p>
        }
        <p>
            <input hidden asp-for="@Model.SkillCount" value="@counter" />
        </p>
        <p>
            <button class="btn btn-primary" type="submit">Submit</button>
        </p>
    </form>
</fieldset>

<div>
    <a asp-action="ListByDate" asp-route-id="@TempData["UserId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
