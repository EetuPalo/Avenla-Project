@model Login_System.ViewModels.UserSkillsWithSkillVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.SkillCount = 0;
    var counter = 0;
}

<h2>@Resources.Resources.UserSkills_Create_Title</h2>
<hr />
<fieldset>
    <form asp-action="Create" asp-controller="UserSkills">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        @for (int i = 0; i < Model.SkillList.Count(); i++)
        {
            counter++;
            <div class="container-fluid p-0">
                <div class="row mb-2">
                    <div class="col-sm-2">
                        <strong><label class="form-check-label align-middle">@Model.SkillList[i]</label></strong>
                    </div>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="@Model.SkillLevel[i]">
                            <option value="0">@Resources.Resources.EVAL_DROPDOWN_0</option>
                            <option value="1">@Resources.Resources.EVAL_DROPDOWN_1</option>
                            <option value="2">@Resources.Resources.EVAL_DROPDOWN_2</option>
                            <option value="3">@Resources.Resources.EVAL_DROPDOWN_3</option>
                            <option value="4">@Resources.Resources.EVAL_DROPDOWN_4</option>
                            <option value="5">@Resources.Resources.EVAL_DROPDOWN_5</option>
                        </select>
                        <input hidden asp-for="@Model.SkillList[i]" />
                        <span asp-validation-for="@Model.SkillLevel[i]"></span>
                    </div>                   
                </div>
                
            </div>
        }
        <p>
            <input hidden asp-for="@Model.SkillCount" value="@counter" />
        </p>
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-sm">
                    <button class="btn btn-primary" type="submit">@Resources.Resources.UserSkills_Create_Submit</button>
                    <a class="btn btn-danger" asp-action="SkillList" asp-route-id="@TempData["UserId"]" asp-route-name="latest">@Resources.Resources.GENERAL_Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
