@model Login_System.Models.UserSkills

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h2>@Model.SkillName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" class="form-control" />
            <input type="hidden" asp-for="AdminEval" class="form-control" />
            <input type="hidden" asp-for="SkillName" class="form-control" />

            <div class="form-group">
                <label asp-for="SkillLevel" class="control-label"></label>
                <input type="number" min="0" max="5" asp-for="SkillLevel" class="form-control" />
                <span asp-validation-for="SkillLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SkillList" asp-route-id="@Model.UserID" asp-route-name="@Model.Date.ToString("dd/MM/yyyy+HH/mm")" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
