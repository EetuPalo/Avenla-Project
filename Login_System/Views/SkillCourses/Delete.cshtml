@model Login_System.Models.SkillCourse

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.DELETE_Title</h2>

<h3>@Resources.Resources.DELETE_Desc</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseContents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseContents)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
    <div class="row">
        <div class="col-sm">
            <div class="container-fluid p-0">
                <form asp-action="Delete">

                    <input type="hidden" asp-for="id" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash fa-fw"> </i> @Resources.Resources.DELETE_Button</button>
                    <button type="button" class="btn btn-outline-primary" onclick="goBack()" style="display: inline-block;"><i class="fas fa-times fa-fw"> </i> Cancel </button>
                </form>
              
            </div>
        </div>
    </div>
</div>
