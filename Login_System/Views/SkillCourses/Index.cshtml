@model IEnumerable<Login_System.Models.SkillCourse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function() {
  $(".content").hide();

  $('.expandable-row').click(function(e) {
      $(this).next('.content').toggle();
      $(this).next('.content').css('background-color', '#F8F8FF');
    //$(this).next('.content').slideToggle();
  });

    });
</script>

<h2>Courses</h2>

<form asp-controller="SkillCourses" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder="Search for courses...">
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value="Filter" />
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
    </div>    
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
	            Course name
            </th>
            <th>
                Location
            </th>
	        <th>
	            Length
            </th>	    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="expandable-row">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
	        <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>	    
            <td>
                <a asp-action="Join" asp-controller="SkillCourseMembers" asp-route-id="@item.id">Join</a> |			    
                <a asp-action="Index" asp-controller="SkillCourseMembers" asp-route-id="@item.id">Members</a> |
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                }

            </td>
        </tr>
        <tr class="content">
            <td colspan="4">@Html.Raw(item.CourseContents)</td>
        </tr>
}
    </tbody>
</table>
