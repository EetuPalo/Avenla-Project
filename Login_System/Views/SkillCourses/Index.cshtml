@model Login_System.ViewModels.SkillCoursesVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function() {
        $(".content").hide();
        $('.content2').css('background-color', '#F8F8FF');

  $('.expandable-row').click(function(e) {
      $(this).next('.content').toggle();
      $(this).next('.content').css('background-color', '#F8F8FF');
    //$(this).next('.content').slideToggle();
  });

    });
</script>

<h2>@Resources.Courses.Index_Title</h2>
<h4 class="text-info">@TempData["ActionResult"]</h4>
<p>@Resources.Courses.Index_TitleDesc</p>
<form asp-controller="SkillCourses" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <div class="input-group">
                    <input class="form-control" id="search-bar" type="text" name="SearchString" placeholder=@TempData["SearchString"] value="@TempData["SearchValue"]">
                    <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" onclick="clearForm()">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="col-sm">
                <button class="btn btn-info" type="submit"><i class="fas fa-search fa-fw"> </i> @Resources.Resources.Employee_Index_Filter</button>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus fa-fw"> </i> @Resources.Courses.Index_Create</a>
                }
            </div>
        </div>
    </div>    
</form>
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Resources.Courses.Index_CourseName
            </th>
            <th>
                @Resources.Courses.Index_Lesson_Location
            </th>
            <th>
                @Resources.Courses.Index_Lessons
            </th>
            <th>
                @Resources.Courses.Index_Duration
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Courses) {
        <tr class="expandable-row">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Model.Lessons.Where(x => x.CourseID == item.id).Count() / @item.Length
            </td>
            <td>
                @Model.Durations.FirstOrDefault(x => x.Key == item.id).Value
            </td>
            <td>
                @if (item.MemberStatus == false)
                {
                <td>
                    <a class="text-info" asp-action="Join" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Join</a> <span> </span>
                </td>
            }
            else if (item.MemberStatus == true && !User.IsInRole("Admin") && item.CompleteStatus != true)
            {
                <td>
                    <a class="text-success" asp-action="Complete" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Complete</a><span>  </span>
                    <a asp-action="Index" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Details</a><span>  </span>
                </td>
            }
            else if (item.MemberStatus == true && !User.IsInRole("Admin") && item.CompleteStatus == true)
            {
                <td>
                    <a asp-action="Index" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Details</a>
                </td>
            }
            else if (item.MemberStatus == true && User.IsInRole("Admin") && item.CompleteStatus != true)
            {
                <td>
                    <a class="text-success" asp-action="Complete" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Complete</a><span>  </span>
                </td>
            }
            else if (item.MemberStatus == true && item.CompleteStatus == true)
            {
                <td>
                    <span class="text-success">@Resources.Courses.Index_Status_Completed</span><span>  </span>
                </td>
            }
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Index" asp-controller="SkillCourseMembers" asp-route-id="@item.id"><i class="fas fa-users fa-fw"> </i> @Resources.Courses.Index_BTN_Members</a>
                    <span> </span>
                }
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <div class="dropdown show">
                        <a class="dropdown-toggle" href="#" role="button" id="courseDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-edit fa-fw"> </i> @Resources.Courses.Index_BTN_Edit
                        </a>
                        <div class="dropdown-menu" aria-labelledby="courseDropdown">
                            <a class="dropdown-item" asp-action="Create" asp-controller="Lessons" asp-route-id="@item.id">@Resources.Courses.Index_BTN_AddLesson</a>
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.id">@Resources.Courses.Index_BTN_Edit</a>
                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.id">@Resources.Resources.DELETE_Button</a>
                            <a class="dropdown-item" asp-action="AddUsers" asp-controller="SkillCourseMembers" asp-route-id="@item.id">@Resources.Courses.Index_BTN_AddMembers</a>
                        </div>
                    </div>
                }
            </td>
            </tr>
        <tr class="content border border-secondary">
            <td colspan="8">
            <div class="container-fluid p-2 ">
                <div class="row">
                    <div class="col-sm">
                        @Html.Raw(item.CourseContents)
                    </div>
                </div>
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Resources.Courses.Index_Lesson_Lesson
                                </th>
                                <th>
                                    @Resources.Courses.Index_Lesson_Date
                                </th>
                                <th>
                                    @Resources.Courses.Index_Lesson_Location
                                </th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lesson in Model.Lessons.Where(x => x.CourseID == item.id))
                            {
                                <tr>
                                    <td colspan="1">
                                        @lesson.LessonName
                                    </td>
                                    <td colspan="1">
                                        @lesson.Date.ToString("dd.MM.yyyy HH.mm")
                                    </td>
                                    <td colspan="1">
                                        @lesson.Location
                                    </td>
                                    <td>
                                        @if (lesson.LessonStatus != true)
                                        {   <td>
                                            <a asp-action="Attend" asp-controller="Lessons" asp-route-id="@lesson.Id">@Resources.Courses.Index_Lesson_Attend</a> <span> </span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>

                                            </td>
                                        }
                                            <td>
                                            <a asp-action="Index" asp-controller="LessonUsers" asp-route-id="@lesson.Id">@Resources.Courses.Index_Lesson_Members</a>
                                            </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                            <span> </span><a asp-action="Create" asp-controller="LessonUsers" asp-route-id="@lesson.Id" asp-route-courseId="@item.id">@Resources.Courses.Index_Lesson_Attending</a>
                                            </td>
                                        }                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
           </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        function clearForm() {
            var search = document.getElementById('search-bar');
            search.value = '';
            document.forms[0].submit();
        }
    </script>
}