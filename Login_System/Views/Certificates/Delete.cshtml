@model Login_System.Models.Certificate

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.DELETE_Title</h2>
<hr />

<div class="card">
    <div class="card-header"><h5>@Resources.Certificates.Delete_Skill</h5></div>
    <div class="card-body">
        <div>
            <h4>@Resources.Resources.DELETE_Desc</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Organization)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Organization)
                </dd>
            </dl>
            <div class="row">
                <div class="col-sm">
                    <div class="container-fluid p-0">
                        <form asp-action="Delete">

                            <input type="hidden" asp-for="Id" />
                            <button type="button" class="btn btn-primary" onclick="goBack()" style="display: inline-block;"><i class="fas fa-times fa-fw"> </i> @Resources.Resources.No_button </button>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash fa-fw"> </i> @Resources.Resources.DELETE_Button</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

