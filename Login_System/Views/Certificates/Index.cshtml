@model IEnumerable<Login_System.Models.Certificate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Certificates.Index_Title</h2>
<form asp-controller="Certificates" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder=@TempData["SearchString"] value=@TempData["SearchValue"]>
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value=@Resources.Certificates.Index_BTN_Search />
                <a class="btn btn-primary" asp-action="Create">@Resources.Certificates.Index_BTN_Create</a>
            </div>
        </div>
    </div>
</form>
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 border-right border-dark">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Organization)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Organization)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Certificates.Index_BTN_Edit</a> |
                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">@Resources.Certificates.Index_BTN_Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <h4>@Resources.Certificates.Index_SubTitle</h4>
            <p>@Resources.Certificates.Index_SubDesc1</p>
            <p>@Resources.Certificates.Index_SubDesc2</p>
        </div>
    </div>
</div>

