@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Login_System.ViewModels
@model Login_System.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-sm-6 border-right border-dark">
                <form method="post" asp-action="ResetPassword" asp-controller="Account">
                    <div asp-validation-summary="All"   class="text-danger" ></div>
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">@Resources.Resources.ResetPassword_Submit</button>
                </form>
            </div>
            <div class="col-sm-6">
                <h4>@Resources.Resources.ResetPassword_Title</h4>
                <p>
                    @Resources.Resources.ResetPassword_Desc
                </p>
            </div>
        </div>
    </div>