@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Login_System.ViewModels
@model Login_System.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 border-right border-dark">
            <fieldset>
                <form asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="All" class="input-validation-error"></div>
                    <div class="form-group">
                        <div>
                            <label asp-for="UserName">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Username" />
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <p>
                        <button class="btn btn-primary" type="submit">Login</button>
                    </p>
                </form>
            </fieldset>
        </div>
        <div class="col-sm-6">
            <h4>Welcome to Avenla Employee Management System</h4>
            <p>
                Please log in with your username and password. Your username is in most cases your first name and last name combined.
                For example John Doe would have a username "JohnDoe".
            </p>
        </div>
    </div>
   
</div>



