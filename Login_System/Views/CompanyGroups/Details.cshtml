@model Login_System.Models.CompanyGroups

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@Resources.Resources.CompanyGroups</h1>
<nav class="breadcrumb_nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="CompanyGroups" asp-action="Index">@Resources.Resources.CompanyGroups</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.Employee_Index_Details</li>
    </ol>
</nav>
<hr />

<div class="card">
    <div class="card-header"><h5>@ViewBag.CompanyGroupName</h5> </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Resources.Resources.CompanyName
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.companiesInGroups) 
                {
                <tr>
                    <td>
                        @company.Name
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>