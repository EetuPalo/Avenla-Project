@model List<Group>
@{
    ViewData["Title"] = "EditGroupOfUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Groups</h2>

<form method="post">
    <div class="card-header">
        <h2>Roles:</h2>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].id" />
                <input type="hidden" asp-for="@Model[i].name" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].name
                </label>
            </div>
        }
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-sm">
                <button type="submit" class="btn btn-primary" style="width:auto"><i class="fas fa-check fa-fw"> </i> Update </button>
                <a class="btn btn-primary" asp-action="Index" asp-controller="AppUsers"><i class="fas fa-arrow-left"> </i> Back to List</a>
            </div>
        </div>
        
    </div>
</form>
