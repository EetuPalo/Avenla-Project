    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-danger btn-sm">Delete</button>
        <button class="btn btn-primary btn-sm" asp-action="Index">Back to List</button>
    </form>
