@model IEnumerable<Login_System.Models.AppUser>
@using System.Web

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee List</h2>
<h4 class="text-danger">@TempData["CreateStatus"]</h4>
<h4 class="text-info">@TempData["ActionResult"]</h4>

<form asp-controller="AppUsers" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder="Search for employees...">
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value="Filter" />
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
    </div>   
</form>
<div class="table-responsive">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Username
                </th>
                <th>
                    Email
                </th>

                <th>
                    Phone Nbr.
                </th>
                <th>
                    Status
                </th>
                <th class="text-center">
                    Online
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpStatus)
                    </td>
                    @*Show different image based on activity status*@
                    @if (item.Active == "Active")
                    {
                        <td>
                            <img class="status-img mx-auto d-block" src="~/img/active.png" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img class="status-img mx-auto d-block" src="~/img/inactive.png" />
                        </td>
                    }
                <td>
                    @*Giving admin users access to every user's edit methods and the current user to his own*@
                    @if (User.IsInRole("Admin") | item.UserName == User.Identity.Name)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> |</span>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span> |</span>
                        <a asp-action="ListByDate" asp-controller="UserSkills" asp-route-id="@item.Id">Skills</a><span> |</span>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    }
                </td>
                </tr>
            }
        </tbody>
    </table>
</div>

