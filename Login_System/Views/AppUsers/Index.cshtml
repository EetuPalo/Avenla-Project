@model IEnumerable<Login_System.Models.AppUser>
@using System.Web

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>@Resources.Resources.Employee_Index_Title</h2>
<h4 class="text-danger">@TempData["CreateStatus"]</h4>
<h4 class="text-info">@TempData["ActionResult"]</h4>
<hr />
<form asp-controller="AppUsers" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <div class="input-group">
                    <input class="form-control" id="search-bar" type="text" name="SearchString" placeholder=@TempData["SearchString"] value="@TempData["SearchValue"]">
                    <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" onclick="clearForm()">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="col-sm">
                <button class="btn btn-info" type="submit"><i class="fas fa-search fa-fw"> </i> @Resources.Resources.Employee_Index_Filter</button>
            </div>
            <div class="col-sm float-right">
                @if (User.IsInRole("Admin")|| User.IsInRole("Superadmin"))
                {
                    <a class="btn btn-primary float-right" asp-action="Create"><i class="fas fa-plus fa-fw"> </i> @Resources.Resources.Employee_Index_Create</a>
                }
            </div>
        </div>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>


                    @Resources.Resources.FirstName
                </th>
                <th>
                    @Resources.Resources.LastName

                </th>
                <th>
                    @Resources.Resources.Email
                </th>

                <th>
                    @Resources.Resources.Phone
                </th>
                <th>
                    @Resources.Resources.Employee_Index_Status
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpStatus)
                    </td>
                    @*Giving admin users access to every user's edit methods and the current user to his own*@
                    <td colspan="2">
                        @if (User.IsInRole("Admin") | User.IsInRole("Superadmin") | item.UserName == User.Identity.Name)
                        {
                            <a class="btn btn-info btn-sm" type="button" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-user fa-fw"> </i> @Resources.Resources.Employee_Index_Details</a><span> </span>
                       
                        }
                    </td>
             
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script type="text/javascript">
  

        function clearForm() {
            var search = document.getElementById('search-bar');
            search.value = '';
            document.forms[0].submit();
        }
    </script>
}
