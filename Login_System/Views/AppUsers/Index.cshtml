@model IEnumerable<Login_System.Models.AppUser>
@using System.Web

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee List</h2>
<h4 class="text-danger">@TempData["CreateStatus"]</h4>
<h4 class="text-info">@TempData["ActionResult"]</h4>
<hr />
<form asp-controller="AppUsers" asp-action="Index">
    <div class="container-fluid p-0">
        <div class="row mb-4">
            <div class="col-sm">
                <input class="form-control" type="text" name="SearchString" placeholder="Search for employees...">
            </div>
            <div class="col-sm">
                <input class="btn btn-info" type="submit" value="Filter" />
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                }
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="col-sm">
                    <div class="dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            Mass Edit
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Delete</a>
                            <a class="dropdown-item" href="#">Set Active</a>
                            <a class="dropdown-item" href="#">Add to Group</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>   
</form>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Username
                </th>
                <th>
                    Email
                </th>

                <th>
                    Phone Nbr.
                </th>
                <th>
                    Status
                </th>
                <th class="text-center">
                    Online
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <input type="checkbox" class="form-check-input" value="1" />
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpStatus)
                </td>
                @*Show different image based on activity status*@
                @if (item.Active == "Active")
                {
                    <td>
                        <img class="status-img mx-auto d-block" src="~/img/active.png" />
                    </td>
                }
                else
                {
                    <td>
                        <img class="status-img mx-auto d-block" src="~/img/inactive.png" />
                    </td>
                }

                @*Giving admin users access to every user's edit methods and the current user to his own*@
                <td colspan="2">
                    @if (User.IsInRole("Admin") | item.UserName == User.Identity.Name)
                    {
                        <a class="" asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> | </span>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    }
                </td>
                <td>
                    @if (User.IsInRole("Admin") | item.UserName == User.Identity.Name)
                    {
                        <div class="dropdown show">
                            <a class="dropdown-toggle" href="#" role="button" id="userDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Details
                            </a>
                            <div class="dropdown-menu" aria-labelledby="userDropDown">
                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id" asp-route-source="index">Profile</a>
                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id" asp-controller="SkillCourseMembers">Courses</a>
                                <a class="dropdown-item" asp-action="SkillList" asp-controller="UserSkills" asp-route-id="@item.Id" asp-route-name="latest">Skills</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="UserCertificates" asp-route-id="@item.Id">Certificates</a>
                            </div>
                        </div>
                    }
                </td>
                </tr>
            }
        </tbody>
    </table>
</div>

