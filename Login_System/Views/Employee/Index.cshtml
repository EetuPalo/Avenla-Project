@model List<Employee>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

<h1>Employees</h1>
<a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Add">Add new</a>
<p>
    @ViewBag.Message
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Status
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Telephone
            </th>
        </tr>
    </thead>
    <tbody>

        @try
        {
            foreach (var obj in Model)
            {
                <tr>
                    @if (obj.Active == "Active")
                    {
                        <td>
                            <img class="status-img" src="~/img/active.png" />
                        </td>
                    }
                    @if (obj.Active == "Inactive")
                    {
                        <td>
                            <img class="status-img" src="~/img/inactive.png" />
                        </td>
                    }
                    <td>
                        @obj.FirstName
                    </td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Telephone
                    </td>
                    <td>
                        <span></span>
                    </td>
                </tr>
            }
        }
        catch (NullReferenceException)
        {
            
        }

    </tbody>
</table>
